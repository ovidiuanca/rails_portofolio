<h1 id="page_title">Stuff I've built</h1>
<div id="posts_wrapper" class="skinny_wrapper">
	<% @projects.each do |project| %>
		<div class="post">
			<p class="date"><%= project.created_at.strftime("%A, %B %d") %></p>
			<h2><a href="#"><%= link_to project.title, project %></a></h2>
			<hr>
		</div>
	<% end %>

	<% if user_signed_in? %>
		<div id="admin_links">
			<%= link_to "New project", new_project_path(@project) %>
		</div>
	<% end %>

</div>

<%= will_paginate @projects %>